{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    ".env.production": ".env.development, .env",
    "changelog.md": "electron-builder.yml",
    "tsconfig.json": "tsconfig.*.json, *.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig, bun.lockb, .swcrc, nest-cli.json, .gitignore, .gitmodules, vite.config.ts, pnpm-lock.yaml, .npmrc"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  }
}
